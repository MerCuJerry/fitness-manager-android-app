<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.my.gymcenter.user.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="账号"
                android:textColor="#100D0D"
                android:textSize="30sp"
                />

            <EditText
                android:id="@+id/reg_et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName"

                android:hint="请输入账号"
                android:textAlignment="center"
                android:textColor="#CAB4B4"
                android:textSize="24sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="密码"
                android:textColor="#100D0D"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/reg_et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:hint="请输入密码"
                android:ems="8"
                android:inputType="textPassword"
                android:textSize="24sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="确认密码"
                android:textColor="#100D0D"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/reg_et_repassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:hint="请再次输入密码"
                android:ems="8"
                android:inputType="textPassword"
                android:textSize="24sp"
                />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="姓名"
            android:textColor="#100D0D"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/reg_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:hint="请输入姓名"
            android:ems="8"
            android:textSize="24sp"
            />
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="电话"
            android:textColor="#100D0D"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/reg_et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:hint="请输入电话"
            android:ems="8"
            android:textSize="24sp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="体重"
                android:textColor="#100D0D"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAlignment="center"
                android:hint="请输入体重"
                android:ems="8"
                android:textSize="24sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/reg_btn_register"
            style="@style/Button"
            android:layout_gravity="center"
            android:text="确认注册"/>
    </LinearLayout>
</LinearLayout>




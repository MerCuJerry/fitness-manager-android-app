<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/found_list_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/png1" />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/found_list_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:fontFamily="@font/stkaiti"
                    android:maxWidth="200dp"
                    android:text="燃烧你的卡路里"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/jiaolianxingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/stkaiti"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

        </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/found_list_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/stkaiti"
            android:text="燃烧你的卡路里"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>



</FrameLayout>